{
  "extends": "@polkadot/dev/config/tslint",
  "linterOptions": {
    "exclude": "packages/**/src/**/*.json"
  },
  "rules": {
    "completed-docs": false,
    "file-header": [true, "Copyright"],
    "ordered-imports": [true, {
      "module-source-path": "basename",
      "grouped-imports": true,
      "groups": [
        {
          "name": "Types imports",
          "match": "type",
          "order": 10
        },
        {
          "name": "External imports",
          "match": "^[^.]",
          "order": 20
        },
        {
          "name": "@polkadot imports",
          "match": "^@polkadot/",
          "order": 30
        }
      ]
    }]
  }
}
